@using Modelo.Entidades
@model Bono

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Nuevo Bono</h1>
<p>Formulario para la creacion de un nuevo Bono</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear Nuevo Bono</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">

            <form method="post" asp-action="Create">
                <div class="form-group">
                    <label class="control-label">Nombre</label>
                    <input class="form-control" asp-for="Nombre"/>
                </div>
                <div class="form-group">
                    <label class="control-label">Tipo</label>
                    <select class="form-control"
                    asp-for="Tipo" asp-items="Html.GetEnumSelectList<BonoTipo>()">
                    </select>                   
                </div>
                <div class="form-group">
                    <label class="control-label">Valor</label>
                    <input class="form-control" asp-for="Valor"/>
                </div>
                <div class="form-group">
                    <label class="control-label">Empleado</label>
                     <select class="form-control" 
                        asp-for="EmpleadoId"
                        asp-items="@ViewBag.selectListaEmpleados">
                            <option value="">--Selecciona un Empleado--</option>  
                    </select>
                    
                </div>

                <div class="form-group">                    
                    <input type="submit" class="btn-primary" value="Crear Bono"/>
                </div>
            </form>

        </div>
    </div>
</div>


