@using Modelo.Entidades
@model Sucursal
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Sucursal</h1>
<p>Formulario para editar la sucursal en el sistema</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Editar Sucursal</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">

            <form method="post" asp-action="Edit">
                <input type="hidden" asp-for="SucursalId" />
                <div class="form-group">
                    <label class="control-label">Nombre</label>
                    <input class="form-control" asp-for="Nombre"/>
                </div>
                <div class="form-group">
                    <label class="control-label">Direccion</label>
                    <input class="form-control" asp-for="Direccion"/>
                </div>

                <div class="form-group">                    
                    <input type="submit" class="btn-primary" value="Editar la sucursal"/>
                </div>
            </form>

        </div>
    </div>
</div>



