@using Modelo.Entidades
@model IEnumerable<Departamento>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><span class="fas fa-layer-group"></span> Departamentos</h1>
<p>Departamentos de la empresa</p>

<div class="container">   

    @if(TempData["mensaje"] != null)
    {
      <div class="alert alert-warning alert-alert-dismissible fade show" role="alert">
        @TempData["mensaje"]
        <button type="button" class="close" data-dismiss="alert" aria-label="close"> 
            <span aria-hidden="true">
                &times;
            </span>
        </button>
    </div>   
    }   

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de departamentos</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block"
            asp-controller = "Departamento" asp-action="Create">
            Crear nuevo departamento
            </a>
        </div>
    </div>

    <div class="row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Departamento Id</td>
                    <td>Nombre</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
                @foreach(Departamento departamento in Model)
                {
                <tr>
                    <td>@departamento.DepartamentoId</td>
                    <td>@departamento.Nombre</td>
                    <td>
                        <a class="btn btn-warning"
                        asp-controller="Departamento" asp-action="Edit" asp-route-id="@departamento.DepartamentoId">
                            Editar
                        </a>        
                        <a class="btn alert-danger"
                        asp-controller="Departamento" asp-action="Delete" asp-route-id="@departamento.DepartamentoId">
                            Borrar
                        </a>  
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>


</div>