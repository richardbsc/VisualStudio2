@using Modelo.Entidades
@model Departamento
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edicion de Departamento</h1>
<p>Formulario para editar un  departamento en el sistema</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Usted esta actulizando el Departamento: @Model.Nombre</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">

            <form method="post" asp-action="Edit">

                <input type="hidden" asp-for="DepartamentoId" />

                <div class="form-group">
                    <label class="control-label">Nombre</label>
                    <input class="form-control" asp-for="Nombre"/>
                </div>

                <div class="form-group">                    
                    <input type="submit" class="btn-primary" value="Actualizar departamento"/>
                </div>
            </form>

        </div>
    </div>
</div>

